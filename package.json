{
  "name": "vegalore",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:frontend": "cd frontend && bun start",
    "start:backend": "cd backend && bun start",
    "postinstall": "npm-run-all --parallel install:*",
    "install:backend": "cd backend && bun install",
    "install:frontend": "cd frontend && bun install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
